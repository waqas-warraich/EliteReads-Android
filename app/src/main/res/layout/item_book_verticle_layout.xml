<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  android:layout_margin="@dimen/_5sdp"  android:id="@+id/item_rec_1_parent" android:tag="layout/row_listing_horizontal_0"  android:layout_width="fill_parent" android:layout_height="wrap_content"  android:foreground="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">



   <androidx.cardview.widget.CardView
       android:id="@+id/imageContainer"
       android:layout_width="wrap_content"
       android:layout_height="190dip"
       app:cardCornerRadius="@dimen/_10sdp"
       app:cardElevation="0.0dip"
       android:layout_centerHorizontal="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">


      <androidx.appcompat.widget.AppCompatImageView
          android:background="@color/grey_lighter"
          android:id="@+id/iv_book_item"
          android:layout_width="130dip"
          android:layout_height="match_parent"
          android:src="@drawable/book_loader"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop"
          />
   </androidx.cardview.widget.CardView>


   <ProgressBar

       android:id="@+id/progress_bar_book_loading"
       style="@android:style/Widget.Holo.Light.ProgressBar.Large"
       android:layout_width="@dimen/_30sdp"
       android:layout_height="@dimen/_30sdp"
       android:layout_centerHorizontal="true"
       android:indeterminateTint="@color/grey_60"
       android:visibility="gone"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>