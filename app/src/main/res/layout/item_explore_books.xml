<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  android:layout_marginTop="@dimen/_20sdp"  android:id="@+id/item_rec_1_parent" android:tag="layout/row_listing_horizontal_0"  android:layout_width="fill_parent" android:layout_height="wrap_content"  android:foreground="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">



   <androidx.cardview.widget.CardView
       android:id="@+id/cvprofileimage"
       android:layout_width="wrap_content"
       android:layout_height="100.0dip"
       android:layout_centerHorizontal="true"
       android:visibility="visible"
       app:cardElevation="3.0dip"
       app:cardCornerRadius="@dimen/_10sdp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="150dip"
          android:layout_height="match_parent">


         <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/tv_item_recommenders_genre"
             android:elevation="2dp"
             android:background="@color/hero_color_transparent"
             android:gravity="center"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintDimensionRatio="6:4"
             app:layout_constraintEnd_toEndOf="parent"
             android:text="@string/explore_books_item_genre_text_"
             android:textStyle="bold"
             android:textColor="@color/white"
             android:textSize="@dimen/_18ssp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"

             />

         <androidx.appcompat.widget.AppCompatImageView
             android:background="@color/black_transparent"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:adjustViewBounds="true"
             android:scaleType="centerCrop"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             />

         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/iv_book_item_explore_books"
             android:layout_width="match_parent"
             android:layout_height="130dip"
             android:adjustViewBounds="true"
             android:scaleType="centerCrop"
             android:background="@drawable/books_collage"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             />

      </androidx.constraintlayout.widget.ConstraintLayout>


   </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>