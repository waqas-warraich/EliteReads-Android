<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/red" />
            <solid android:color="@color/red" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/design_dark_default_color_error" />
            <solid android:color="@color/design_dark_default_color_error" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
</selector>