<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/orange_losos_80_opacity" />
            <solid android:color="@color/orange_losos_80_opacity" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="@dimen/_5sdp" />
            <gradient android:startColor="@color/splash_gradient_start_color" android:endColor="@color/splash_gradient_center_color" android:angle="0.0" />
        </shape>
    </item>
</selector>